@import "icons"

light-border = #ddd
dark-border = #aaa
white-background = #ffffff
light-background = #f6f6f6
dark-background = #eeeeee
font-default = Helvetica, "Nimbus Sans L", "Liberation Sans", Arial, sans-serif
font-mono = Consolas,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,Courier New, monospace
outline-color = #BADA55 solid 1px
outline-offset = 0px
$icon = 12px
$iconmini = 8px

box-shadow(args...)
  -webkit-box-shadow args
  -moz-box-shadow args
  box-shadow args

// components
table.sui-grid
  box-sizing border-box
  *
    box-sizing border-box
  border-collapse collapse
  td
    border-bottom 1px solid light-border
    margin 0
    padding 0
  tr:first-child
    td
      border-top 1px solid light-border
  td:first-child
    border-left 1px solid light-border
  td:last-child
    border-right 1px solid light-border
  td.sui-top
  td.sui-left
    background-color white-background
  td.sui-bottom
  td.sui-right
    background-color light-background

.sui-bottom-left
.sui-bottom-right
.sui-top-left
.sui-top-right
  position absolute
  background-color #fff

.sui-top-right
  top 0
  right 0
  box-shadow(-1px 1px 6px rgba(0,0,0,0.1))
  &.sui-grid
    tr:first-child
      td
        border-top none
    td:last-child
      border-right none
.sui-top-left
  top 0
  left 0
  box-shadow(1px 1px 6px rgba(0,0,0,0.1))
  &.sui-grid
    tr:first-child
      td
        border-top none
    td:last-child
      border-left none
.sui-bottom-right
  bottom 0
  right 0
  box-shadow(-1px 1px 6px rgba(0,0,0,0.1))
  &.sui-grid
    tr:first-child
      td
        border-bottom none
    td:last-child
      border-right none
.sui-bottom-left
  bottom 0
  left 0
  box-shadow(1px 1px 6px rgba(0,0,0,0.1))
  &.sui-grid
    tr:first-child
      td
        border-bottom none
    td:last-child
      border-left none
.sui-fill
  position absolute
  width 100%
  max-height 100%
  top 0
  left 0

.sui-append
  width 100%

.sui-control
  -moz-user-select -moz-none
  -khtml-user-select none
  -webkit-user-select none
  -o-user-select none
  user-select none
  box-sizing border-box
  font-size 11px
  font-family font-default
  line-height 18px
  vertical-align middle
  *
    box-sizing border-box
    margin 0
    padding 0
  button
    line-height 18px
    vertical-align middle
  input
    line-height 18px
    vertical-align middle
    border none
    background-color light-background
  button:focus
    outline outline-color
    outline-offset outline-offset
  input:focus
    outline outline-color
    outline-offset outline-offset

  output
    padding 0 6px
    background-color white-background

  input[type="number"]
  input[type="date"]
  input[type="datetime-local"]
  input[type="time"]
    text-align right
  input[type="number"]
    font-family font-mono
  input
    padding 0 6px
  input[type="color"]
  input[type="checkbox"]
    padding 0
    margin 0
  input[type="range"]
    margin 0 8px
  button
    background-color dark-background
    border 1px solid dark-border
    border-radius 4px

  &.sui-control-single
    input
    output
    button
      width 100%
    input[type="checkbox"]
      width initial
  &.sui-control-double
    input
    output
    button
      width 50%
    .input1
      width calc(100% - 7em)
    .input2
      width 7em
    .input1[type="range"]
      width calc(100% - 7em - 16px)
  &.sui-type-bool
    text-align center

.sui-array
  list-style none
  .sui-array-item
    border-bottom 1px dotted dark-border
    //margin 2px 0
    //padding 2px 0
    //min-height 18px
    position relative
    > *
      vertical-align top
      //> .sui-icon
      //  margin-top 4px
    &:first-child
      > .sui-move
        > .sui-icon-up
          visibility hidden
    &:last-child
      > .sui-move
        border-bottom none
        > .sui-icon-down
          visibility hidden
    > div
      display inline-block
    .sui-move
      position absolute
      width $iconmini
      height 100%
      .sui-icon-mini
        display block
        position absolute
      .sui-icon-up
        top 0
        left -2px
      .sui-icon-down
        bottom 0
        left -2px
    .sui-control-container
      margin 0 12px 0 8px
      width calc(100% - 20px)
    .sui-remove
      width $icon
      position absolute
      right 0
      top 0
    .sui-icon-remove
    .sui-icon-up
    .sui-icon-down
      cursor pointer
  ~ .sui-control
    margin-bottom 0px
.sui-array-add
  text-align right


.sui-icon
.sui-icon-mini
  display inline-block
  opacity 0.4
  vertical-align middle
  &:hover
    opacity 0.8

.sui-icon
  margin-top -1px
  width $icon
  height $icon
  background-size $icon $icon

.sui-icon-mini
  width $iconmini
  height $iconmini
  background-size $iconmini $iconmini
