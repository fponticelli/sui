@import "icons"

light-border = #ddd
dark-border = #aaa
white-background = #ffffff
light-background = #f6f6f6
dark-background = #eeeeee
font-default = Helvetica, "Nimbus Sans L", "Liberation Sans", Arial, sans-serif
font-mono = Consolas,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,Courier New, monospace
outline-color = #AAFF99 solid 1px
outline-offset = 1px
$icon = 12px

box-shadow(args...)
  -webkit-box-shadow args
  -moz-box-shadow args
  box-shadow args

// components
table.sui-grid
  box-sizing border-box
  *
    box-sizing border-box
  border-collapse collapse
  td
    border-bottom 1px solid light-border
    margin 0
    padding 0
  tr:first-child
    td
      border-top 1px solid light-border
  td:first-child
    border-left 1px solid light-border
  td:last-child
    border-right 1px solid light-border
  td.sui-top
  td.sui-left
    background-color white-background
  td.sui-bottom
  td.sui-right
    background-color light-background

.sui-bottom-left
.sui-bottom-right
.sui-top-left
.sui-top-right
  position absolute
  background-color #fff

.sui-top-right
  top 0
  right 0
  box-shadow(-1px 1px 6px rgba(0,0,0,0.1))
  &.sui-grid
    tr:first-child
      td
        border-top none
    td:last-child
      border-right none
.sui-top-left
  top 0
  left 0
  box-shadow(1px 1px 6px rgba(0,0,0,0.1))
  &.sui-grid
    tr:first-child
      td
        border-top none
    td:last-child
      border-left none
.sui-bottom-right
  bottom 0
  right 0
  box-shadow(-1px 1px 6px rgba(0,0,0,0.1))
  &.sui-grid
    tr:first-child
      td
        border-bottom none
    td:last-child
      border-right none
.sui-bottom-left
  bottom 0
  left 0
  box-shadow(1px 1px 6px rgba(0,0,0,0.1))
  &.sui-grid
    tr:first-child
      td
        border-bottom none
    td:last-child
      border-left none
.sui-fill
  position absolute
  width 100%
  max-height 100%
  top 0
  left 0

.sui-append
  width 100%

.sui-control
  box-sizing border-box
  *
    box-sizing border-box
    font-size 11px
    font-family font-default
    margin 0
    padding 0
    //display inline-block
    line-height 18px
    vertical-align middle
  input
    border none
    background-color light-background
  button:focus
    outline outline-color
    outline-offset outline-offset
  input:focus
    outline outline-color
    outline-offset outline-offset

  output
    padding 0 6px
    background-color white-background

  input[type="number"]
  input[type="date"]
  input[type="datetime-local"]
  input[type="time"]
    text-align right
  input[type="number"]
    font-family font-mono
  input
    padding 0 6px
  input[type="color"]
  input[type="checkbox"]
    padding 0
    margin 0
  input[type="range"]
    margin 0 8px
  button
    background-color dark-background
    border 1px solid dark-border
    border-radius 4px

  &.sui-control-single
    input
    output
    button
      width 100%
    input[type="checkbox"]
      width initial
  &.sui-control-double
    input
    output
    button
      width 50%
    .input1
      width calc(100% - 7em)
    .input2
      width 7em
    .input1[type="range"]
      width calc(100% - 7em - 16px)
  &.sui-type-bool
    text-align center

.sui-array
  list-style none
  .sui-array-item
    border-bottom 1px dotted dark-border
    &:last-child
      border-bottom none
      margin-bottom 4px
    > div
      display inline-block
    .sui-drag
      width $icon
    .sui-control-container
      width calc(100% - 32px)
    .sui-remove
      width $icon

.sui-icon
  width $icon
  height $icon
  background-size $icon $icon
  display inline-block
  opacity 0.4
  margin-top -1px

.sui-icon-drag
  cursor move
  cursor -webkit-grab
  cursor grab
